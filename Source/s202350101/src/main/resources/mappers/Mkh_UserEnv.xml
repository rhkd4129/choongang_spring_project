<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- com.oracle.s202350101.뒤에 매핑하고 싶은 모델쓰면 됩니다 
	 mapper 여러개 쓰셔도 됩니다. -->
	 
	 
<mapper namespace="com.oracle.s202350101.UserEnvMapper">
	<!-- user_id에 해당하는 Env -->
	<select id="selectUserEnv" parameterType="String" resultType="UserEnv">
		Select *
		From   user_env
		Where  user_id = #{user_id}
	</select>
	
	<!-- 알림 환경설정 수정 -->
	<update id="mkhUpdateEnv" parameterType="userEnv">
		Update 	user_env
		Set	   	env_alarm_comm      = #{env_alarm_comm},
				env_alarm_reply     = #{env_alarm_reply},
				env_alarm_mine      = #{env_alarm_mine},
				env_alarm_meeting   = #{env_alarm_meeting},
				env_chat            = #{env_chat}
		Where   user_id 			= #{user_id}
	
	</update>
</mapper>

